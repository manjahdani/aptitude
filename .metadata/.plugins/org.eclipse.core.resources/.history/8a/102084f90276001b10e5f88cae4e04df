package be.uclouvain.organisation.told

import io.sarl.lang.core.AgentContext
import io.sarl.core.OpenEventSpace

/** 
 * @author manjah
 * 
 */
event JoinPlatform{
	val contextID : AgentContext
	val defaultSpaceID : OpenEventSpace
	
	new (context : AgentContext, openSpace : OpenEventSpace) {
		this.contextID = context
		this.defaultSpaceID = openSpace
	}
}

event AlgorithmJoinPlatform extends JoinPlatform {
	
	val name : String
	new (context : AgentContext, openSpace : OpenEventSpace, belief : String) {
		super(context,openSpace)
		this.name = belief
	}
}
