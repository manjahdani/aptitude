class AlgorithmInfo implements Cloneable {

	val name : String
	var belief : String
	val task : String
	var level: int
	
	new (n : String, b : String, t : String, l : int) {
		this.name = n
		this.belief = b
		this.task = t
		this.level = l
	}

	new (n : String, t : String) {
		this.name = n
		this.belief = null
		this.task = t
		this.level = -1
	}
	
	new (n : String, b : String, t : String) {
		this.name = n
		this.belief = b
		this.task = t
		this.level = 0
	}

	new (n : String, t : String, l: int) {
		this.name = n
		this.belief = null
		this.task = t
		this.level = l 
	}
	
	def setLevel(a : int) : void{
		this.level=a
	}
	
	def cloneChild {
		return this.clone.IncrementLevelAndGet
	}
	def IncrementLevelAndGet : AlgorithmInfo{
		this.level=level+1
		return this
	}
	
	def getLevel{
		return this.level
	}
	
	
	def getName {
		return this.name
	}

	def getBelief {
		return this.belief;
	}

	def getTask {
		return this.task;
	}
}
