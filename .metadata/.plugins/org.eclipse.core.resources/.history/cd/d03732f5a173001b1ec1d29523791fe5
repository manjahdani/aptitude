package be.uclouvain.organisation.told

import io.sarl.core.Logging
import be.uclouvain.organisation.OrganisationInfo
import io.sarl.core.OpenEventSpace
import io.sarl.core.Behaviors

/** 
 * @author manjah
 * 
 */
behavior TOLDRole {
	uses Logging,Behaviors
	
	var WorldSpace : OpenEventSpace
	
	on OrganisationInfo {
		WorldSpace = occurrence.spaceID
		WorldSpace.register(asEventListener)
	}
}
