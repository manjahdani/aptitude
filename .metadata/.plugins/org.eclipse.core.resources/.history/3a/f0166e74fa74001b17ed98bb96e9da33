package be.uclouvain.aptitudeAgents.util

import org.arakhne.afc.math.geometry.d3.d.Point2d

/** 
 * @author manjah
 * 
 */
class BBoxes2D extends BBOX {
	


	val conf : double 
	val frame : int
	
	new (x:int, y:int, w:int, h:int, conf:double, frame:int)
	{
		super(x,y,w,h)
		this.conf=conf;
		this.frame=frame;
	}

	def getConf {
		return this.conf
	}
	def getFrame {
		return this.frame
	}
	
}
class BBOX {
	
	val x : int
	val y : int
	val w : int
	val h : int
	
	new (x : int, y : int, w : int, h : int)
	{
		this.x=x;
		this.y=y;
		this.w=w;
		this.h=h;
	}
	
	def getX{
		return this.x
	}

	def getY {
		return this.y
	}

	def getW {
		return this.w
	}

	def getH {
		return this.h
	}
	
	def getCentroid(){
		
		return ((x+x+w)/2)
	}
	
	
}