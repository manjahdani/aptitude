/** 
 * 
 */
package be.uclouvain.aptitudeAgents

import be.uclouvain.organisation.interactivity.inputDevice.InputDeviceCapacity
import be.uclouvain.organisation.interactivity.inputDevice.InputDeviceRole
import io.sarl.core.Initialize
import io.sarl.core.Logging
import io.sarl.lang.core.EventSpace
import java.util.TreeMap
import java.util.UUID
import io.sarl.core.Behaviors

/** 
 * @author manjah
 * 
 */
agent UserInterface {
	uses Logging, Behaviors

	on Initialize {
		val UI_type = occurrence.parameters.get(0).toString
		switch (UI_type) {
			// To change, its a user job !!! It doens'nt make sense
			case "NetworkDeviceManager": {
				val s = setSkill(
					new DeviceNetworkManagerSkill(65001, occurrence.parameters.get(1) as TreeMap<UUID, EventSpace>),
					InputDeviceCapacity)
				registerBehavior(new InputDeviceRole(this))
				setSkill(new MobileOutputSkill(s.getMobileAddress), OutputDeviceCapacity)
				registerBehavior(new OutputDeviceRole(this))
			}
		}

	}
}
