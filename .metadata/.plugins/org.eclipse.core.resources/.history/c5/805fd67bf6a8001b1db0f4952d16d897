package be.uclouvain.aptitude.surveillance;

import java.util.LinkedList;
import java.util.concurrent.Executor;
import java.util.concurrent.Executors;
import java.util.function.Consumer;

import com.vaadin.flow.shared.Registration;

import be.uclouvain.aptitude.surveillance.algorithm.messages.BBoxes2DTrackMessage;

public class Broadcaster {
    static Executor executor = Executors.newSingleThreadExecutor();

    static LinkedList<Consumer<BBoxes2DTrackMessage>> listeners = new LinkedList<>();

    public static synchronized Registration register(Consumer<BBoxes2DTrackMessage> listener) {
        listeners.add(listener);

        return () -> {
            synchronized (Broadcaster.class) {
                listeners.remove(listener);
            }
        };
    }

    public static synchronized void broadcast(BBoxes2DTrackMessage bboxes) {
        for (Consumer<BBoxes2DTrackMessage> listener : listeners) {
            executor.execute(() -> listener.accept(bboxes));
        }
    }

