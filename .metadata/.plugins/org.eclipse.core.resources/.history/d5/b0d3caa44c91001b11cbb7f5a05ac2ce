package be.uclouvain.organisation.told

import io.sarl.lang.core.AgentContext
import io.sarl.core.OpenEventSpace

/** 
 * The event (-X)JoinOrganisation invites the receiver to join a Context 
 */
event JoinOrganisation{
	val contextID : AgentContext // The destination context  
	val defaultSpaceID : OpenEventSpace // The defaultSpace 
	
	new (context : AgentContext, openSpace : OpenEventSpace) {
		this.contextID = context
		this.defaultSpaceID = openSpace
	}
}

/** 
 * The event (-X)JoinPlatform invites the receiver (an Algorithm) to join a Context 
 */
 
event AlgorithmJoinPlatform extends JoinOrganisation {
	
	val name : String // Name of the algorithm
	val task : String // Which task will be done
	new (context : AgentContext, openSpace : OpenEventSpace, n : String, t : String) {
		super(context,openSpace)
		this.name = n
		this.task = t
	}
}
