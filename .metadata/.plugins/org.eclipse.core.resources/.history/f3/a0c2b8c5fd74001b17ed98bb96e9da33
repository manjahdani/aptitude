package be.uclouvain.aptitudeAgents.util



import org.arakhne.afc.math.geometry.d2.d.Point2d

/** 
 * @author manjah
 * 
 */
class BBoxes2D {
	

	val bbox : BBOX
	val conf : double 
	val frame : int
	val globalID : int
	val classeID : int
	
	new (bb:BBOX, conf:double, globalID:int, classeID:int, frame:int)
	{
		this.bbox = bb
		this.conf=conf;
		this.frame=frame;
		this.globalID = globalID
		this.classeID=classeID
	}

	def getConf {
		return this.conf
	}
	def getFrame {
		return this.frame
	}
	def getBBOX{
		return this.bbox
	}
	def getGlobalID{
		return this.globalID
		
	}
	
	def classeID{
		return this.classeID
	}
}
class BBOX {
	
	val x : int
	val y : int
	val w : int
	val h : int
	
	new (x : int, y : int, w : int, h : int)
	{
		this.x=x;
		this.y=y;
		this.w=w;
		this.h=h;
	}
	
	def getX{
		return this.x
	}

	def getY {
		return this.y
	}

	def getW {
		return this.w
	}

	def getH {
		return this.h
	}
	
	def getCentroid(){
	
		return ( new Point2d(( x + x + w)/2, ( y + y + h)/2))
	}
	
	def getArea(){
		return w*h
	}
}