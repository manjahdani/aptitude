/** 
 * 
 */
package be.uclouvain.organisation.interactivity.inputDevice

import io.sarl.core.DefaultContextInteractions
import io.sarl.core.Destroy
import io.sarl.core.Initialize
import be.uclouvain.organisation.interactivity.inputDevice.DataAcquisition
import be.uclouvain.organisation.interactivity.element.ElementInformation

/** 
 * @author manjah
 * 
 */
behavior InputDeviceRole {
	uses DefaultContextInteractions, InputDeviceCapacity

	on Initialize {
		EnableInputStream()
	}

	// info("The input device behavior was started.")
	// }
	on Destroy {
		DisableInputStream()
	}

	// info("The input device behavior was stopped.")
	// }
	on DataAcquisition {
		emit(new ElementInformation(occurrence.data))[it.UUID == occurrence.elementID]
	}
}
